<mah:MetroWindow x:Class="MiniSpotifyController.window.AudioAnalysisWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:MiniSpotifyController.window"
                xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                xmlns:iconpacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
                xmlns:viewmodel="clr-namespace:MiniSpotifyController.viewmodel" 
                d:DataContext="{d:DesignInstance Type=viewmodel:AudioAnalysisViewModel}" 
                mc:Ignorable="d"
                WindowState="Maximized"
        Title="AudioAnalysisWindow" Height="450" Width="800">
    <mah:MetroWindow.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="8,4" />
        </Style>
    </mah:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Header="Metadata"
            Style="{StaticResource MahApps.Styles.GroupBox.Clean}"
            Margin="10">
            <UniformGrid
                Rows="7"
                Columns="2">
                <TextBlock Text="Analyzer Version" />
                <TextBlock Text="{Binding AudioAnalysisResult.Meta.AnalyzerVersion}" />
                <TextBlock Text="Platform" />
                <TextBlock Text="{Binding AudioAnalysisResult.Meta.Platform}" />
                <TextBlock Text="Detailed Status" />
                <TextBlock Text="{Binding AudioAnalysisResult.Meta.DetailedStatus}" />
                <TextBlock Text="Status Code" />
                <TextBlock Text="{Binding AudioAnalysisResult.Meta.StatusCode}" />
                <TextBlock Text="Timestamp" />
                <TextBlock Text="{Binding AudioAnalysisResult.Meta.Timestamp}" />
                <TextBlock Text="Analysis Time" />
                <TextBlock Text="{Binding AudioAnalysisResult.Meta.AnalysisTime}" />
                <TextBlock Text="Input Process" />
                <TextBlock Text="{Binding AudioAnalysisResult.Meta.InputProcess}" />
            </UniformGrid>
        </GroupBox>
    </Grid>
</mah:MetroWindow>
