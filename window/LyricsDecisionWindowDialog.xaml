<mah:MetroWindow x:Class="MiniSpotifyController.window.LyricsDecisionWindowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniSpotifyController.window" xmlns:viewmodel="clr-namespace:MiniSpotifyController.viewmodel" d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title="LyricsDecisionWindowDialog" Height="450" Width="800">
    <UniformGrid Rows="2">
        <TextBlock Text="{Binding LyricsDecisionMessage}" />
        <UniformGrid Columns="3">
            <Button Content="Yes" />
            <Button Content="No" />
            <Button Content="Ask Google" />
        </UniformGrid>
    </UniformGrid>
</mah:MetroWindow>
